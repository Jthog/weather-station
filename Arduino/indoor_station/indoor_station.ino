void setup() {
  Serial.begin(115200);

  co2Serial.begin(9600, SERIAL_8N1, RX_PIN, TX_PIN);
  co2Sensor.begin(co2Serial);
  co2Sensor.autoCalibration();
  
  Serial.print("Connecting to ");
  Serial.println(ssid);

  WiFi.begin(ssid, password);

  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }

  Serial.println("");
  Serial.println("WiFi connected");
  Serial.println("IP address: ");
  Serial.println(WiFi.localIP());
  
  espClient.setCACert(ca_cert);
  client.setServer(mqtt_server, mqtt_port);
  configTime(gmtOffset_sec, daylightOffset_sec, ntpServer);

  dht.begin();
}

void reconnect() {
  // Loop until we're reconnected
  while (!client.connected()) {
    Serial.print("Attempting MQTT connection...");
    // Attempt to connect
    if (client.connect("ESP32Client", mqtt_user, mqtt_password)) {
      Serial.println("connected");
    } else {
      Serial.print("failed, rc=");
      Serial.print(client.state());
      Serial.println(" try again in 5 seconds");
      // Wait 5 seconds before retrying
      delay(5000);
    }
  }
}

void loop() {
  unsigned long currMillis = millis();

  if (currMillis - lastMsg > 30000) {
    lastMsg = currMillis;
    if (!client.connected()) {
      reconnect();
    }
    client.loop();

    time_t now;
    struct tm timeinfo;
    while (!getLocalTime(&timeinfo)) {
      Serial.println("Failed to get time!");
    }
    time(&now);

    payload["timestamp"] = now;
    payload["temperature"] = dht.readTemperature();
    payload["co2"] = co2Sensor.getCO2();
    payload["humidity"] = dht.readHumidity();
    
    String payload_string;
    serializeJson(payload, payload_string);
    
    if (client.publish("indoor_station/data", payload_string.c_str())) {
      Serial.println("Message published:");
      serializeJsonPretty(payload, Serial);
      Serial.println();
    }
  }
}
